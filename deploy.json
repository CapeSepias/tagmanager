{
  "defaultStacks": ["flexible"],
  "packages":{
    "tag-manager":{
      "type":"autoscaling",
      "data":{
        "port":9000,
        "bucket":"composer-dist",
        "publicReadAcl": false
      }
    }
  },
  "recipes":{
    "default":{
      "depends" : ["artifactUploadOnly", "deployOnly"]
    },
    "deployOnly":{
      "actionsPerHost": ["tag-manager.deploy"]
    },
    "artifactUploadOnly":{
      "actionsBeforeApp": ["tag-manager.uploadArtifacts"]
    }
  }
}